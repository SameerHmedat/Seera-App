<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:title="CATALOG"
        app:navigationIcon="@drawable/ic_baseline_menu_24"
        app:titleTextColor="@color/white" />

    <ProgressBar
        android:id="@+id/progress_circular_Loading"
        android:layout_width="136dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="148dp"
        android:background="@color/black"
        android:theme="@style/ProgressTheme" />


    <TextView
        android:id="@+id/txtErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginTop="176dp"
        android:background="@color/black"
        android:text="@string/message_error"
        android:textColor="#D80A0A"
        android:textSize="30sp"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="@+id/txtPopular"
        app:layout_constraintTop_toBottomOf="@+id/txtPopular" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/movieslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            tools:context=".MainActivity">


            <TextView
                android:id="@+id/txtPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Popular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtPopular"
                app:layout_constraintTop_toBottomOf="@+id/txtPopular" />



            <ProgressBar
                android:id="@+id/progress_circular_popular"
                android:layout_width="136dp"
                android:layout_height="145dp"
                android:layout_marginTop="28dp"
                android:background="@color/black"
                android:visibility="gone"
                android:theme="@style/ProgressTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.539"
                app:layout_constraintStart_toStartOf="@+id/txtPopular"
                app:layout_constraintTop_toBottomOf="@+id/txtPopular" />

            <TextView
                android:id="@+id/txtTopRated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Top Rated"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtPopular"
                app:layout_constraintTop_toBottomOf="@id/rvPopular" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTopRated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtPopular"
                app:layout_constraintTop_toBottomOf="@+id/txtTopRated" />

            <ProgressBar
                android:id="@+id/progress_circular_topRated"
                android:layout_width="136dp"
                android:layout_height="145dp"
                android:layout_marginTop="28dp"
                android:background="@color/black"
                android:visibility="gone"
                android:theme="@style/ProgressTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.539"
                app:layout_constraintStart_toStartOf="@+id/txtTopRated"
                app:layout_constraintTop_toBottomOf="@+id/txtTopRated" />

            <TextView
                android:id="@+id/txtUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Upcoming"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtPopular"
                app:layout_constraintTop_toBottomOf="@id/rvTopRated" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUpcoming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtPopular"
                app:layout_constraintTop_toBottomOf="@+id/txtUpcoming" />


            <ProgressBar
                android:id="@+id/progress_circular_upcoming"
                android:layout_width="136dp"
                android:layout_height="145dp"
                android:layout_marginTop="28dp"
                android:background="@color/black"
                android:theme="@style/ProgressTheme"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.539"
                app:layout_constraintStart_toStartOf="@+id/txtUpcoming"
                app:layout_constraintTop_toBottomOf="@+id/txtUpcoming" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>